{
  "title": "Temporary switch to Colemak if any modifier key is down.",
  "rules": [
    {
      "description": "left_control switches to Colemak while pressed.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": "any"
            }
          },
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_source_id": "org.sil.ukelele.keyboardlayout.rulemak.rulemak"
                }
              ]
            }
          ],
          "to": [
            {
              "select_input_source": {
                "input_source_id": "com.apple.keylayout.Colemak"
              }
            },
            {
              "key_code": "left_control"
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "input_source_id": "org.sil.ukelele.keyboardlayout.rulemak.rulemak"
              }
            }
          ]
        }
      ]
    },
